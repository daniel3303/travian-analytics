@using TravianAnalytics.Services
@model TravianAnalytics.Dtos.Auth.LoginDto
@inject ConfigurationsService Configurations



<div class="container">
    <div class="row">
        <div class="col-12">
            <img src="~/images/logo.png" alt="@Configurations.Title" class="img-fluid logo"/>
            
            <h2>área reservada</h2>
            <h1>STAFF</h1>

            <form asp-action="Login">
                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Utilizador" autofocus />
                </div>

                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                </div>

                <button class="btn btn-login btn-block mt-4" type="submit">Entrar</button>
            </form>
        </div>
    </div>
</div>
